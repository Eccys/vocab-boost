<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".VocabApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_v_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_v_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VocabularyBooster"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.VocabularyBooster">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuizActivity"
            android:exported="false"
            android:theme="@style/Theme.VocabularyBooster" />
        <activity
            android:name=".BookmarksActivity"
            android:exported="false"
            android:theme="@style/Theme.VocabularyBooster" />
        <activity
            android:name=".QuizResultsActivity"
            android:exported="false"
            android:theme="@style/Theme.VocabularyBooster" />
        <activity
            android:name=".StatsActivity"
            android:exported="false" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.VocabularyBooster" />
        <activity
            android:name=".AccountsActivity"
            android:exported="false"
            android:theme="@style/Theme.VocabularyBooster" />
        <activity
            android:name=".debug.DebugActivity"
            android:exported="false"
            android:theme="@style/Theme.VocabularyBooster" />
    </application>

</manifest>